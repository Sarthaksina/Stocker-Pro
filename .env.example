# STOCKER Pro API Environment Variables
# Copy this file to .env and fill in the values

# Environment
STOCKER_ENVIRONMENT=production
STOCKER_LOG_LEVEL=info

# API Settings
STOCKER_API_HOST=0.0.0.0
STOCKER_API_PORT=8000
STOCKER_API_WORKERS=4
STOCKER_API_CORS_ORIGINS=["https://yourdomain.com","http://localhost:3000"]
STOCKER_API_RATE_LIMITING_ENABLED=true
STOCKER_API_RATE_LIMIT_PER_MINUTE=60

# Security Settings
STOCKER_SECURITY_SECRET_KEY=change-this-to-a-secure-random-string
STOCKER_SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
STOCKER_SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
STOCKER_SECURITY_SSL_ENABLED=false

# Database Settings
POSTGRES_USER=stocker
POSTGRES_PASSWORD=stockerpassword
POSTGRES_DB=stocker_db
STOCKER_DATABASE_URL=postgresql://stocker:stockerpassword@db:5432/stocker_db

# Redis Settings
STOCKER_REDIS_URL=redis://redis:6379/0

# Alpha Vantage API
STOCKER_ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Grafana Settings
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
